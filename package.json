{
  "name": "eco",
  "version": "1.0.1",
  "description": "Eco - Minimalist Voice Input with Groq STT",
  "main": "main.cjs",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win nsis",
    "build-portable": "electron-builder --win portable",
    "build-all": "electron-builder --win nsis portable",
    "dist": "electron-builder --publish=never",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest __tests__/unit",
    "test:integration": "jest __tests__/integration",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "lint": "eslint *.cjs *.js --ignore-pattern __tests__"
  },
  "keywords": [
    "voice",
    "recorder",
    "speech-to-text",
    "transcription",
    "groq",
    "whisper",
    "electron"
  ],
  "author": "Daniel",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/YOUR-USERNAME/eco.git"
  },
  "bugs": {
    "url": "https://github.com/YOUR-USERNAME/eco/issues"
  },
  "homepage": "https://github.com/YOUR-USERNAME/eco#readme",
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "babel-jest": "^29.7.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "jsdom": "^22.1.0",
    "jsdom-global": "^3.0.2",
    "playwright": "^1.54.2",
    "spectron": "^19.0.0"
  },
  "dependencies": {
    "form-data": "^4.0.4",
    "node-fetch": "^2.7.0"
  }
}
